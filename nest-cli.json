{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": "tsc",
    "assets": [
      {
        "include": "../configuration/**/*.yaml",
        "outDir": "dist/configuration"
      }
    ],
    "deleteOutDir": true
  }
}
